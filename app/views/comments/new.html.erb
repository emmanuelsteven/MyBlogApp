<%= form_with model: [@user, @post, @comment], class:'form', url: user_post_comments_path do |f| %>

    <%= f.label :text, required: true, class: 'comment_label' %> </br>
    <%= f.text_field :text, required: true, class:'form_text', placeholder: 'Enter comment' %> </br> 


    <%= f.submit "Comment", class: 'comment_btn' %>

<% end %>